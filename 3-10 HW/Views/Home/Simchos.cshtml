@model SimchaViewModel
<div class="row mt-3">
    <div class="container mt-5">
        <div class="col-md-12">
        </div>
        <div class="col-md-4">
            <button class="btn btn btn-danger" id="new-simcha">New Simcha</button>
        </div>
        <table class="table table-hover table-striped table-bordered">
            <thead>
                <tr>
                    <th>Contributions</th>
                    <th>Simcha</th>
                    <th>Contributers</th>
                    <th>Amount</th>
                    <th>Date</th>

                </tr>
            </thead>
            <tbody>
                @foreach (Simcha simcha in Model.Simchas)
                {
                    <tr>
                        <td>
                            <a href="/home/Contributions?id=@simcha.Id" class="btn btn-primary">Cotributions</a>
                        </td>
                        <td>@simcha.Name</td>
                        <td>@simcha.ContributerCount / @Model.Contributers</td>
                        <td>@(simcha.Amount*-1)</td>
                        <td>@simcha.Date.ToShortDateString()</td>

                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
<div class="modal fade" tabindex="-1" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">New Simcha</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form method="POST" action="/home/newSimcha">
                    <div class="form-group">
                        <label>Simcha Name</label>
                        <input class="form-control" name="name" placeholder="Simcha Name" type="text">
                    </div>
                    <div class="form-group">
                        <label>Date</label>
                        <input type="date" name="date" class="form-control" id="datepicker">
                    </div>
                    <div class="modal-footer">
                        <button class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                        <button class="btn btn-primary" name="commit">Save</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>